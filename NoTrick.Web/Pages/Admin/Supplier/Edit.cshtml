@page
@model NoTrick.Web.Pages.Admin.Supplier.Edit

@{
    ViewData["Title"] = "Home page";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">@(Model.Id.HasValue ? "Edit" : "Add") Supplier </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Supplier/Index">Supplier</a>
                    </li>
                    <li class="breadcrumb-item active">@(Model.Id.HasValue ? "Edit" : "Add") Supplier</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-primary">
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form" asp-route-id="@Model.Id">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Input.CompanyName"></label>
                <input class="form-control" asp-for="Input.CompanyName"/>
            </div>
            <div class="form-group">
                <label asp-for="Input.Balance"></label>
                <input class="form-control" asp-for="Input.Balance"/>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>