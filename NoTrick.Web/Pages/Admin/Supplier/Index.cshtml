@page
@model NoTrick.Web.Pages.Admin.Supplier.Index

@{
    ViewData["Title"] = "Home page";
}
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Supplier Page</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a asp-page="/Admin/Supplier/Index">Suppliers</a></li>
          <li class="breadcrumb-item active">Suppliers</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
        <table class="table table-borderless">
          <tr>
            <th>Supplier Id</th>
            <th>Company Name</th>
            <th>Balance</th>
            <th>Actions</th>
          </tr>
          @foreach (var supplier in Model.Suppliers) {
            <tr>
              <td class="AccountId">
                <span>@supplier.Id</span>
              </td>
              <td class="EMail">
                <span>@supplier.CompanyName</span>
              </td>
              <td class="CreatedAt">
                <span>@supplier.Balance</span>
              </td>
              <td>
                <div class="d-flex flex-row flex-wrap">
                  <a class="btn btn-outline-success m-1" asp-page="Pending" asp-page-handler="UpdateStatus" asp-route-id="@supplier.Id" asp-route-approve="true">Edit</a>
                  <a class="btn btn-outline-danger m-1" asp-page="Pending" asp-page-handler="UpdateStatus" asp-route-id="@supplier.Id" asp-route-approve="false">Remove</a>
                </div>
              </td>
            </tr>
          }
          </table> 
      </div>
    </div>
  </div>
</div>
  
<!-- /.main-content -->
