@page
@model NoTrick.Web.Pages.Admin.Account.RolesModel
@{
    ViewData["Title"] = "Roles";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Roles</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Account/Index">Accounts</a></li>
                    <li class="breadcrumb-item active">Roles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-row flex-wrap">
                    <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#addModal"><i class="fas fa-plus"></i></button>
                </div>
                <table class="table table-borderless">
                    <tr>
                        <th>Role Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    @foreach (var role in Model.Roles) {
                        <tr>
                            <td id="roleId">
                                <span>@role.Id</span>
                            </td>
                            <td id="name">
                                <span>@role.Name</span>
                            </td>
                            <td id="Description">
                                <span>@role.Description</span>
                            </td>
                            <td>
                                <div class="d-flex flex-row flex-wrap">
                                    <a class="btn btn-outline-danger m-1" asp-page="Roles" asp-page-handler="Remove" asp-route-id="@role.Id">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.main-content -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add A New Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Description"></label>
                        <input asp-for="Input.Description" class="form-control" />
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
