@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="small-box bg-gradient-success">
                    <div class="inner">
                        <h3>$@Model.Counts.PayoutSum</h3>
                        <p>Total Supplier Payout</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <a asp-page="/Admin/Supplier/Payouts" class="small-box-footer">
                        More info <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="small-box bg-gradient-warning">
                    <div class="inner">
                        <h3>$@Model.Counts.PendingPayoutSum</h3>
                        <p>Total Pending Supplier Payout</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-hand-holding-usd"></i>
                    </div>
                    <a asp-page="/Admin/Supplier/Payouts" class="small-box-footer">
                        More info <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="small-box bg-gradient-info">
                    <div class="inner">
                        <h3>@Model.Counts.Accounts</h3>
                        <p>Accounts</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a asp-page="/Admin/Account/Index" class="small-box-footer">
                        More info <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="small-box bg-gradient-primary">
                    <div class="inner">
                        <h3>@Model.Counts.Suppliers</h3>
                        <p>Suppliers</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-parachute-box"></i>
                    </div>
                    <a asp-page="/Admin/Supplier/Index" class="small-box-footer">
                        More info <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Accounts In Each Status</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class=""></div></div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class=""></div></div></div>
                        <canvas id="accountStatusDoughnut" style="height: 230px; min-height: 230px; display: block; width: 764px;" width="764" height="230" class="chartjs-render-monitor"></canvas>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-lg-6">


                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Accounts Created in the Past Seven Days</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class=""></div></div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class=""></div></div></div>
                        <canvas id="accountCreatedCountLine" style="height: 230px; min-height: 230px; display: block; width: 764px;" width="764" height="230" class="chartjs-render-monitor"></canvas>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts {
    <script>
        @Html.Raw(Model.AccountStatusChart.CreateChartCode("accountStatusDoughnut"))
        @Html.Raw(Model.AccountCreatedCountChart.CreateChartCode("accountCreatedCountLine"))
    </script>
}
